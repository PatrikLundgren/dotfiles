echo "Bootstrapping yadm"
echo "Bootstrapping yadm finished"

source $HOME/.bash_profile

if ! [ -d $HOME/.wallpaper ]; then
	mkdir $HOME/.wallpaper
	wget -O $HOME/.wallpaper/wallpaper.jpg https://512pixels.net/downloads/macos-wallpapers-6k/10-10-6k.jpg
fi

# Detect OS version and install corresponding packages
grep -q "ID_LIKE=debian" /etc/os-release
if [[ $? -eq 0 ]]; then
	echo "Installing Debian packages..."
	sudo apt update
	sudo apt install $(cat $HOME/.config/yadm/aptlist)
fi

source $HOME/.xprofile

echo "Setting up permission, these will require restart to take effect"
# Set some common usergroups
sudo usermod -aG docker patlu
sudo usermod -aG dialout patlu
sudo usermod -aG wireshark patlu
sudo usermod -aG vboxsf patlu

sudo ln -s $HOME/.config/yadm/i3-konsole.sh /etc/profile.d/i3-konsole.sh
